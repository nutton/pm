<p id="notice"><%= notice %></p>

<h1>Configurations</h1>

<table>
  <thead>
    <tr>
      <th>Vendor</th>
      <th>Active</th>
      <th>Configuration</th>
      <th>Model</th>
      <th>Partnumber</th>
      <th>Comment</th>
      <th>Dept</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configurations.each do |configuration| %>
      <tr>
        <td><%= configuration.vendor_id %></td>
        <td><%= configuration.active %></td>
        <td><%= configuration.configuration_id %></td>
        <td><%= configuration.model %></td>
        <td><%= configuration.partnumber %></td>
        <td><%= configuration.comment %></td>
        <td><%= configuration.dept_id %></td>
        <td><%= link_to 'Show', configuration %></td>
        <td><%= link_to 'Edit', edit_configuration_path(configuration) %></td>
        <td><%= link_to 'Destroy', configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

